@model EmployeeSignUp
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Set Credentials";
    var successMessage = "Your Employee ID: " + TempData["Success"] + " has been succesfully created. Please Proceed to set your credentials.";
}


@section head{
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
}

<style>    
    .container{
        margin: 28px auto 0 auto;
    }
    .row{
        margin-top: 15px;
        display: flex;
        justify-content:center;
    }
    .form-control {
        margin-bottom: 10px;
    }
</style>

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-warning">
            <span>@successMessage</span>
            <script>alert(@successMessage)</script>
        </div>
    }
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 well well-sm m-3">
            <h3>Set Credentials</h3>
            <form asp-action="SignUpCredentials" method="post" class="form">
                <div class="row">
                    <input type="hidden" id="inputEmployeeID" class="form-control m-1" placeholder="EmployeeID" asp-for="EmployeeID" required="">
                    <input type="hidden" id="inputFirstName" class="form-control m-1" placeholder="FirstName" asp-for="FirstName" required="">
                    <input type="hidden" id="inputLastName" class="form-control m-1" placeholder="LastName" asp-for="LastName" required="">
                    <input type="hidden" id="IsValid" class="form-control m-1" asp-for="IsValid" required="">
                    
                </div>
                <input class="form-control m-1" id="Username" placeholder="Create Username" type="text" asp-for="UserName" />
                <input class="form-control m-1" id="inputPassword" placeholder="Create Password" type="password" asp-for="Password" />
                <input class="form-control m-1" name="inputConfirmPassword" placeholder="Confirm Password" type="password"/>
                <script>
                    $(document).ready(function () {
                        $('submitForm').click(function (e) {
                            var field1Value = $('inputPassword').val();
                            var field2Value = $('inputConfirmPassword').val();

                            if (field1Value !== field2Value) {
                                e.preventDefault(); // Prevent form submission

                                $('#error-message').text('Confirm password does not with the Password');
                            }
                        });
                    });
                </script>
                <br />
                <br />
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Sign up
                </button>
            </form>
        </div>
    </div>
</div>