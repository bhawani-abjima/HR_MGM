@{
    ViewData["Title"] = "Applicant Form";
}


<head>
    <style>
        .card {
            
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 10px;
        }

        

        .card-title {
            font-size: 30px;
            font-weight: bold;
            margin-bottom: 5px;
            text-align: center; 

        }
        .columnleft {
          
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            width: 50%;
            padding: 2px;
        }

            .columnleft div {
                display: flex;
                flex-direction: row;
                align-items: center;
                margin-bottom: 10px;
            }

                .columnleft div label {
                    width: 160px;
                    margin-right: 10px;
                }


        .columnright {
           
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            width: 50%;
            padding: 2px;
        }

            .columnright div {
                display: flex;
                flex-direction: row;
                align-items: center;
                margin-bottom: 10px;
            }

                .columnright div label {
                    width: 160px;
                    margin-right: 10px;
                }
    </style>
</head>
<div class="card">
    <div class="card-body">
        <div class="card">
            
                <h4 class="card-title" style=" align-items:center;">Applicant Registration</h4>
         
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="columnleft">
                        <form method="post">
                            <div>
                                <label for="applicantNo">Applicant No:</label>
                                <input type="text" id="applicantNo" name="applicantNo" required>
                            </div>
                            <div>
                                <label for="fullName">Full Name:</label>
                                <input type="text" id="fullName" name="fullName" required>
                            </div>
                            <div>
                                <label for="contactNo">Contact No:</label>
                                <input type="text" id="contactNo" name="contactNo" required>
                            </div>
                            <div>
                                <label for="gender">Gender:</label>
                                <select id="gender" name="gender" required>
                                    <option value="Select">Select</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div>
                                <label for="totalExperience">Total Experience:</label>
                                <input type="text" id="totalExperience" name="totalExperience" placeholder="in months" required>
                            </div>
                            <div>
                                <label for="relevantExperience">Relevant Experience:</label>
                                <input type="text" id="relevantExperience" name="relevantExperience" placeholder="in months" required>
                            </div>
                            <div>
                                <label for="profileAppliedFor">Profile Applied For:</label>
                                <select id="profileAppliedFor" name="profileAppliedFor" required>
                                    <option value="Select">Select</option>
                                    <option value="Product Manager">Product Manager</option>
                                    <option value="Technical Lead">Technical Lead</option>
                                    <option value="Senior Software Engineer">Senior Software Engineer</option>
                                    <option value="Product Manager">Product Manager</option>
                                    <option value="Junior Software Developer">Junior Software Developer</option>
                                    <option value="Technical Project Manager">Technical Project Manager </option>
                                    <option value="HR Manager">HR Manager</option>
                                    <option value="Social Media Marketing Analyst">Social Media Marketing Analyst</option>
                                    <option value="Intern">Intern</option>
                                </select>
                            </div>
                            <div>
                                <label for="technicalSkills">Technical Skill Set:</label>
                                <input type="text" id="technicalSkills" name="technicalSkills" required>
                            </div>
                            <div>
                                <label for="highestQualification">Highest Qualification:</label>
                                <select id="highestQualification" name="highestQualification" required>
                                    <option value="">Select qualification</option>
                                    <option value="High School">High School</option>
                                    <option value="Diploma">Diploma</option>
                                    <option value="Bachelor's Degree">Bachelor's Degree</option>
                                    <option value="Master's Degree">Master's Degree</option>
                                    <option value="PhD">PhD</option>
                                </select>
                            </div>

                            <div>
                                <label for="yearOfPassing">Year Of Passing:</label>
                                <select id="yearOfPassing" name="yearOfPassing" required>
                                    <option value="Select Year">Select Year</option>
                                    <option value="2011">2011</option>
                                    <option value="2012">2012</option>
                                    <option value="2013">2013</option>
                                    <option value="2014">2014</option>
                                    <option value="2015">2015</option>
                                    <option value="2061">2016</option>
                                </select>
                            </div>

                            <div>
                                <label for="currentCTC">Current CTC:</label>
                                <input type="text" id="currentCTC" name="currentCTC" placeholder="in lkh"  required>
                            </div>
                            <div>
                                <label for="expectedCTC">Expected CTC:</label>
                                <input type="text" id="expectedCTC" name="expectedCTC" placeholder="in cr" required>
                            </div>
                            <div>
                                <label for="noticePeriod">Notice Period in current Company:</label>
                                <input type="text" id="noticePeriod" name="noticePeriod" placeholder="in months"  required>
                            </div>
                            <div>
                                <label for="employmentStatus">Status of Employment:</label>
                                <input type="text" id="employmentStatus" name="employmentStatus" required>
                            </div>
                            <div>
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="email" required>
                            </div>
                            <div>
                                <label for="address">Address:</label>
                                <input type="text" id="address" name="address" required>
                            </div>
                        </form>
                    </div>
                    <div class="columnright">
                        
                       
                        <div>
                            <label for="currentLocation">Current Location:</label>
                            <input type="text" id="currentLocation" name="currentLocation" required>
                        </div>
                        <div>
                            <label for="relocate">Willing to Relocate?</label>
                            <input type="checkbox" id="relocate" name="relocate">
                        </div>
                        <div>
                            <label for="currentCompany">Current Company:</label>
                            <input type="text" id="currentCompany" name="currentCompany" required>
                        </div>
                        <div>
                            <label for="telephonicRound">Telephonic Round:</label>
                            <input type="text" id="telephonicRound" name="telephonicRound" required>
                        </div>
                        <div>
                            <label for="technicalRound1">Technical Interview Round 1:</label>
                            <input type="text" id="technicalRound1" name="technicalRound1" required>
                        </div>
                        <div>
                            <label for="interviewer1">First Interviewer Name:</label>
                            <input type="text" id="interviewer1" name="interviewer1" required>
                        </div>
                        <div>
                            <label for="interviewStatus1">Interview Status / Feedback:</label>
                            <input type="text" id="interviewStatus1" name="interviewStatus1" required>
                        </div>
                        <div>
                            <label for="technicalRound2">Technical Interview Round 2:</label>
                            <input type="text" id="technicalRound2" name="technicalRound2" required>
                        </div>
                        <div>
                            <label for="interviewer2">Second Interviewer Name:</label>
                            <input type="text" id="interviewer2" name="interviewer2" required>
                        </div>
                        <div>
                            <label for="interviewStatus2">Interview Status / Feedback:</label>
                            <input type="text" id="interviewStatus2" name="interviewStatus2" required>
                        </div>
                        <div>
                            <label for="finalFeedback">Final Feedback:</label>
                            <input type="text" id="finalFeedback" name="finalFeedback" required>
                        </div>
                        <div>
                            <label for="finalStatus">Final Status:</label>
                            <input type="text" id="finalStatus" name="finalStatus" required>
                        </div>
                        <div>
                            <label for="additionalComments">Additional Comments:</label>
                            <textarea id="additionalComments" name="additionalComments" rows="2" cols="50"></textarea>
                        </div>
                    </div>
                </div>
                <div>
                    <button type="submit">Submit</button>
                </div>

            </div>
        </div>
    </div>
</div>

